{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "apps/main_app/src",
    "compilerOptions": {
        "deleteOutDir": true,
        "webpack": true,
        "tsConfigPath": "apps/main_app/tsconfig.app.json",
        "plugins": [
            {
                "name": "@nestjs/swagger",
                "options": {
                    "classValidatorShim": false,
                    "introspectComments": true
                }
            }
        ]
    },
    "monorepo": true,
    "root": "apps/main_app",
    "projects": {
        "main_app": {
            "type": "application",
            "root": "apps/main_app",
            "entryFile": "main",
            "sourceRoot": "apps/main_app/src",
            "compilerOptions": {
                "tsConfigPath": "apps/main_app/tsconfig.app.json"
            }
        },
        "common": {
            "type": "library",
            "root": "libs/common",
            "entryFile": "index",
            "sourceRoot": "libs/common/src",
            "compilerOptions": {
                "tsConfigPath": "libs/common/tsconfig.lib.json"
            }
        },
        "auth": {
            "type": "application",
            "root": "apps/auth",
            "entryFile": "main",
            "sourceRoot": "apps/auth/src",
            "compilerOptions": {
                "tsConfigPath": "apps/auth/tsconfig.app.json"
            }
        },
        "location": {
            "type": "application",
            "root": "apps/location",
            "entryFile": "main",
            "sourceRoot": "apps/location/src",
            "compilerOptions": {
                "tsConfigPath": "apps/location/tsconfig.app.json"
            }
        },
        "models": {
            "type": "library",
            "root": "libs/models",
            "entryFile": "index",
            "sourceRoot": "libs/models/src",
            "compilerOptions": {
                "tsConfigPath": "libs/models/tsconfig.lib.json"
            }
        }
    }
}
