{
    "version": "0.2.0",
    "configurations": [
        {
            "command": "cd client && npm start",
            "name": "Run npm start",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Run Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost",
            "webRoot": "${workspaceFolder}/client",
        },
        {
            "type": "firefox",
            "request": "launch",
            "name": "firefox",
            "url": "http://localhost",
            "webRoot": "${workspaceFolder}/client",
            "reAttach": true,
            "keepProfileChanges": true,
            "firefoxArgs": [
                "-devtools",
            ],
            "profileDir": "/home/sumnic/snap/firefox/common/mozilla/firefox/dev",
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Debug: app-name",
            "remoteRoot": "/usr/src/app",
            "localRoot": "${workspaceFolder}/server",
            "port": 9229,
            "restart": true,
            "address": "0.0.0.0",
            "skipFiles": ["<node_internals>/**"]
          }
    ]
}